 <Ui xmlns="http://www.blizzard.com/wow/ui/"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Script file="GatherMaybe.lua" />
	<Font name="Lato" font="Interface\AddOns\GatherMaybe\Fonts\Lato-Regular.ttf" virtual="true">
		<FontHeight>
			<AbsValue val="12"/>
		</FontHeight>
	</Font>
	<Frame name="Gather" parent="UIParent" inherits="BasicFrameTemplate" hidden="false" alpha="0.8" movable="true">
		<Size x="234" y="50"/>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Scripts>
			<OnDragStart>Gather:StartMoving();</OnDragStart>
			<OnDragStop>Gather:StopMovingOrSizing();</OnDragStop>
			<OnLoad>
				Gather:RegisterForDrag("LeftButton");
				Gather:SetMovable(true);
				Gather:Show();
			</OnLoad>
		</Scripts>
		<Layers>
			<Layer>
				<FontString name="Title" inherits="GameFontNormal" text="Gather Maybe?">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension y="-6" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
				<FontString name="Interact" inherits="GameFontNormal" text="Gather automatically">
					<Anchors>
						<Anchor point="LEFT TOP">
							<Offset>
								<AbsDimension x="33" y="-30"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<CheckButton name="ckbInteract" inherits="UICheckButtonTemplate" checked="true">
				<Size x="20" y="20"/>
				<Scripts>
					<OnClick>
							interact = not interact;
							print("GatherMaybe said:  Ok, I will do as I'm told!")
					</OnClick>
				</Scripts>
				<Anchors>
					<Anchor point="LEFT">
						<Offset>
							<AbsDimension x="10" y="-13" />
						</Offset>
					</Anchor>
				</Anchors>
			</CheckButton>
			
			
		</Frames>
	</Frame>
</Ui>